<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_bg"
    tools:context="com.example.agadimaganda.findyourownbarber.Activity.PopupActivity">

    <TextView
        android:id="@+id/are_you_sure"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Fotoğrafı silmek istediğinize emin misiniz?"
        android:textSize="20dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/yes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/are_you_sure"
        android:layout_marginTop="40dp"
        android:text="Evet"
        android:textSize="20dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/no_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/yes_button"
        android:layout_alignBottom="@+id/yes_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Hayir"
        android:textStyle="italic"
        android:textSize="20dp" />
</RelativeLayout>
